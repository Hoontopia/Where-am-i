<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:src="@drawable/around_loc"
            android:id="@+id/tracking"
            android:onClick="OnOptionClicked"
            android:nestedScrollingEnabled="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:src="@drawable/my_loc"
            android:id="@+id/currentLOC_call"
            android:onClick="OnOptionClicked"
            android:focusable="false"
            android:clickable="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/set_direct"
            android:background="#00ff0000"
            android:onClick="OnOptionClicked" />

        <ImageButton
            android:id="@+id/searchOPT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:src="@drawable/picker"
            android:onClick="OnOptionClicked" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="검색어를 입력하세요."
            android:textSize="5pt"
            android:id="@+id/nameText"
            android:layout_weight="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:src="@drawable/search"
            android:id="@+id/search"
            android:onClick="OnOptionClicked" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:src="@drawable/settings"
            android:id="@+id/tts_Setting"
            android:onClick="OnOptionClicked" />
    </LinearLayout>

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipper">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currentLOC"
                android:gravity="center"
                android:layout_gravity="top"
                android:text="현재 위치"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/extend"
                android:layout_gravity="top|right"
                android:src="@drawable/extend"
                android:onClick="onInfoClicked"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exit"
                android:layout_gravity="right|top"
                android:src="@drawable/exit"
                android:onClick="onexitClicked"
                android:layout_marginTop="15dp" />
        </FrameLayout>

    </ViewFlipper>

</LinearLayout>